<div class='row'>
<div class='eight columns centered'>

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'nice'}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :login %>
    <%= f.text_field :login, :class => 'input-text' %></div>

  <div><%= f.label :email %>
    <%= f.email_field :email, :class => 'input-text' %></div>

  <div><%= f.label :password %>
    <%= f.password_field :password, :class => 'input-text' %></div>

  <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'input-text' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>

</div>
</div>
