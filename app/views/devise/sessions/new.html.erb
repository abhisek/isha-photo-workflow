
<div class='row'>
  <div class='four columns centered loginBox'>
<h3>Sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'nice'}) do |f| %>
  <div><%= f.label :login %>
    <%= f.text_field :login, :class => 'input-text' %></div>

  <div><%= f.label :password %>
    <%= f.password_field :password, :class => 'input-text' %></div>

  <% if devise_mapping.rememberable? -%>
    <label for="checkbox1" class="column">
      <%= f.check_box :remember_me %> Remember Me
    </label>
  <% end -%>
  <label class="column forgotPass">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </label>

  <label class='clear'>
    <%= f.submit "Sign in", :class => 'radius medium orange button' %>
  </label>

  <label class='clear'>
    <%= button_tag "New Registration", :id => 'NewRegBtn', :class => 'radius medium orange button' %>
  </label>
<% end %>

</div>
</div>

<script>
  $('#NewRegBtn').click(function() {
    window.location = '<%= raw(new_registration_path(resource_name)) %>';
    return false; // this shall disable form submit
  });
</script>
