
<div class='row'>
  <div class='four columns centered'>
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'nice'}) do |f| %>
  <div><%= f.label :login %>
    <%= f.text_field :login, :class => 'input-text' %></div>

  <div><%= f.label :password %>
    <%= f.password_field :password, :class => 'input-text' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>

</div>
</div>
