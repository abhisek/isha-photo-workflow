<div class='row'>
  <div class='four columns centered loginBox'>
<h3>Change your password</h3>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'nice' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %>
    <%= f.password_field :password, :class => 'input-text' %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, :class => 'input-text' %></div>

  <div><%= f.submit "Change my password", :class => 'medium radius orange button' %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>

</div>
</div>
